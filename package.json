{
  "name": "grail-css",
  "version": "0.0.14",
  "description": "Easy CSS layouts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brother-donkey/grail"
  },
  "scripts": {
    "start": "npm run build:site --watch",
    "build:site": "wireit",
    "build:css": "wireit",
    "prepublishOnly": "npm run build:css"
  },
  "wireit": {
    "build:css": {
      "command": "parcel build \"src/grail.scss\" \"src/shared.scss\" \"src/single.scss\" \"src/twin.scss\" \"src/standard.scss\" --dist-dir  \"dist\"",
      "output": [
        "./dist/**/*"
      ],
      "files": [
        "./src/grail.scss",
        "./src/shared.scss",
        "./src/single.scss",
        "./src/twin.scss",
        "./src/standard.scss"
      ]
    },
    "build:site": {
      "command": "parcel build \"./site/*.html\" --dist-dir \"site-dist\" --no-cache --no-optimize",
      "output": [
        "dist-site/**/*"
      ],
      "files": [
        "**/*.html",
        "**/*.scss",
        "**/*.js"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "wireit": "^0.9.5",
    "lightningcss": "^1.19.0",
    "@microsoft/atlas-css": "^3.27.0",
    "@microsoft/atlas-js": "^1.5.4",
    "@parcel/transformer-sass": "^2.8.0",
    "parcel": "^2.8.0",
    "posthtml-include": "^1.7.4",
    "@changesets/cli": "^2.26.1"
  }
}
